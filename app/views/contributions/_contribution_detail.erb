<tr class="athing">
  <td class="ind"></td>
  <td valign="top" class="votelinks">
    <%= link_to '<div class="votearrow" title="upvote"></div>'.html_safe, {:controller => "votes",
                                                                           :action => "create",
                                                                           :vote => {
                                                                               :contribution_id => @contribution.id
                                                                           }},
                :method => "post" %>
  </td>
  <td class="default">
    <div style="margin-top:2px; margin-bottom:-10px;">
        <span class="comhead">
          <a href="#">
