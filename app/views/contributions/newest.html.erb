<% content_for :title, "Hacker News" %>
<head>
</head>
<body>

<table class="grey">
  <% @contributions.each_with_index do |contribution, index| %>
      <tr>
        <td align="right" valign="top">
          <font color="grey"><%= index+1 %>.</font>
        </td>
        <td valign="top">
          <% unless logged_in? and contribution.votes.any? { |v| v.user_id == current_user.id } %>
              <%= link_to '<div class="votearrow" title="upvote"></div>'.html_safe, {:controller => "votes",
                                                                                     :action => "create",
                                                                                     :vote => {
                                                                                         :contribution_id => contribution.id
                                                                                     }},
                          :method => "post" %>
          <% end %>
        </td>
        <td>


          <font color="black">
            <a href="/discuss?id=<%= contribution.id %>">
              <%= contribution.title %>
            </a>
            <% if !contribution.url.blank? %>
                (<a href="<%= contribution.url %>"><%= contribution.url%></a>)
            <% end %>
          </font>
        </td>
      </tr>
      <tr>
        <td colspan="2"></td>
        <td>

          <font color="grey">
            <%= contribution.votes.length %> points by 
            <a href="/user?id=<%= contribution.user.id %>" data-no-turbolink="true"><%= contribution.user.name %></a>
            <!--TODO: SOLVE THE TURBO LINK-->
                  <!--<%= link_to current_user.email, controller: :users, action: :show, id: current_user.id, data: {:no_turbolink => true} %>-->
            <a href="/discuss?id=<%= contribution.id %>"><%= time_ago_in_words(contribution.created_at) %> ago</a> |
            <a href="/discuss?id=<%= contribution.id %>"><%= contribution.replies.length %> comments</a>
          </font>
        </td>
      </tr>
      <tr class="spacer" style="height:5px"></tr>
  <% end %>
</table>

</body>