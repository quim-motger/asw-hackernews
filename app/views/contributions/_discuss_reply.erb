<tr class="athing">
  <td></td>
  <td colspan="2">
    <table style="margin-left:50px" border="0">
      <tbody>
      <tr>
        <td class="ind"></td>
        <td valign="top" class="votelinks">
          <% unless logged_in? and reply.votes.any? { |v| v.user_id == current_user.id } %>
              <%= link_to '<div class="votearrow" title="upvote"></div>'.html_safe, {:controller => "votes",
                                                                                     :action => "create",
                                                                                     :vote => {
                                                                                         :contribution_id => reply.id
                                                                                     }},
                          :method => "post" %>
          <% end %>
        </td>
        <td class="default">
          <%= reply.user.name %>  <%= time_ago_in_words(reply.created_at) %>
          <br>
          <span class="comment">
                  <%= reply.content %>
          </span><br>
          <%= reply.votes.length %> votes
        </td>
      </tr>
      </tbody>
    </table>
  </td>
</tr>
      