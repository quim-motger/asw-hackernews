<% content_for :title, "Hacker News" %>
<head>
</head>
<body>

<table bgcolor=#f6f6ec width="100%">


  <% @contributions.each_with_index do |contribution, index| %>
      <tr>
        <td><font style="color: orange">*</font></td>
        <td>
          <font color="grey">
            <%= contribution.votes.length %> points by 
            <a href="/user?id=<%= contribution.user.id %>" data-no-turbolink="true"><%= contribution.user.name %></a>
            <!--TODO: SOLVE THE TURBO LINK-->
                  <!--<%= link_to current_user.email, controller: :users, action: :show, id: current_user.id, data: {:no_turbolink => true} %>-->
            <%= time_ago_in_words(contribution.created_at) %> ago
            | on: 
            <% if contribution.parent.title.blank? %>
              <a href="/discuss?id=<%= contribution.parent.parent.id %>"><%= contribution.parent.parent.title %></a>
            <% else %>
              <a href="/discuss?id=<%= contribution.parent.id %>"><%= contribution.parent.title %></a>
            <% end %>
          </font>
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <font color="black">
            <%= contribution.content %>
          </font>
        </td>
      </tr>
      <tr class="spacer" style="height:5px"></tr>
  <% end %>
</table>

</body>