<tr class="grey">
  <td>
    <table>
      <%= form_for(@user, url: (url_for controller: :users, action: :update, id: @user.id)) do |f| %>
          <% if @user.errors.any? %>
              <tr>
                <td>
                  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
                </td>
              </tr>
              <tr>
                <td>
                  <ul>
                    <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </td>
              </tr>
          <% end %>

          <tr>
            <td valign="top"><%= f.label :name %></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.hidden_field :id %></td>
          </tr>
          <tr>
          </tr>
          <tr>
            <td valign="top"><%= f.label :email %></td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td><%= f.submit %></td>
          </tr>
      <% end %>
    </table>
  </td>
</tr>
